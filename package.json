    "test:coverage": "jest --coverage",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix"
  },
  "keywords": [
    "recruitment",
    "platform",
    "nodejs",
    "typescript",
    "prisma"
